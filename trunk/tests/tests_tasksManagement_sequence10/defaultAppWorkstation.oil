OIL_VERSION = "2.5" : "tests_tasksManagement_sequence10" ;

IMPLEMENTATION trampoline {
    OS { 
        ENUM [EXTENDED] STATUS;
    } ;
    TASK {
        UINT32 STACKSIZE = 32768 ;
        UINT32 [1..10] PRIORITY = 1 ;
    } ;
};

CPU test {

    OS config {
         STATUS = STANDARD;
		SHUTDOWNHOOK = TRUE;
		STARTUPHOOK = TRUE;
    	ERRORHOOK = TRUE;
        PRETASKHOOK = TRUE;
        APP_SRC = "tests_tasksManagement_sequence10.c";
        APP_SRC = "task1_instance.c";
        APP_SRC = "task2_instance.c";
        APP_SRC = "task3_instance.c";
        TRAMPOLINE_BASE_PATH = "../..";
        CFLAGS  = "-g";
        CFLAGS  = "-I ../";
        CFLAGS  = "-I /usr/lib/arm-eclipse-eseo/codesourcery-gnu-arm/arm-none-eabi/include/sys/";
        CFLAGS  = "-I ../embUnit";
        ASFLAGS = "";
		LDFLAGS = "../../machines/ARM7/OKI/Trick/_udivsi3.o ../../machines/ARM7/OKI/Trick/_dvmd_tls.o";
    	LDFLAGS = "-L ../../machines/ARM7/OKI";
		LDFLAGS = "-L ../embUnit ";
		LDFLAGS = "-L ../ ";
		LDFLAGS = "-L ../lib";
		LDFLAGS = "-L ../../tests/lib -lembUnit";
    	LDFLAGS = "-n -T ../../machines/ARM7/ldscript -Map ../../machines/ARM7/ld.map ";
    
    } ;

    APPMODE std {};

    TASK t1 {
        AUTOSTART = TRUE { APPMODE = std ; } ;
        PRIORITY = 1;
        ACTIVATION = 1;
        SCHEDULE = FULL;
    };

    TASK t2 {
        AUTOSTART = FALSE;
        PRIORITY = 2;
        ACTIVATION = 1;
        SCHEDULE = FULL;
        EVENT = Event2;
    };

    TASK t3 {
        AUTOSTART = FALSE;
        PRIORITY = 2;
        ACTIVATION = 1;
        SCHEDULE = FULL;
        EVENT = Event3;
    };

    EVENT Event2 { MASK=AUTO; };
    EVENT Event3 { MASK=AUTO; };
};

