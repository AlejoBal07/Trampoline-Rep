OIL_VERSION = "2.5" : "tests_tasksManagement_sequence1" ;

IMPLEMENTATION trampoline {
    OS { 
        ENUM [EXTENDED] STATUS;
    } ;
    TASK {
        UINT32 STACKSIZE = 32768 ;
        UINT32 [1..10] PRIORITY = 1 ;
    } ;
    ISR {
        UINT32 STACKSIZE = 32768 ;
    } ;
};

 CPU test {

    OS config {
        STATUS = EXTENDED;
		SHUTDOWNHOOK = TRUE;
	 	APP_SRC = "tests_tasksManagement_sequence1.c";
	 	APP_SRC = "task1_instance.c";
	 	APP_SRC = "task2_instance.c";
	 	APP_SRC = "isr1_instance.c";
	 	APP_SRC = "isr2_instance.c";
        TRAMPOLINE_BASE_PATH = "../..";
       	CFLAGS  = "-g";
        CFLAGS  = "-I ../";
        CFLAGS  = "-I /usr/lib/arm-eclipse-eseo/codesourcery-gnu-arm/arm-none-eabi/include/sys/";
        CFLAGS  = "-I ../embUnit";
        ASFLAGS = "";
		LDFLAGS = "../../machines/ARM7/OKI/Trick/_udivsi3.o ../../machines/ARM7/OKI/Trick/_dvmd_tls.o";
    	LDFLAGS = "-L ../../machines/ARM7/OKI";
		LDFLAGS = "-L ../embUnit ";
		LDFLAGS = "-L ../ ";
		LDFLAGS = "-L ../lib";
		LDFLAGS = "-L ../../tests/lib -lembUnit";
    	LDFLAGS = "-n -T ../../machines/ARM7/ldscript -Map ../../machines/ARM7/ld.map ";
    
    } ;

    APPMODE std {};

    TASK t1 {
        AUTOSTART =  TRUE { APPMODE = std ; } ;
        PRIORITY = 1;
        ACTIVATION = 1;
        SCHEDULE = NON;
    };

    TASK t2 {
        AUTOSTART =  FALSE;
        PRIORITY = 2;
        ACTIVATION = 1;
        SCHEDULE = NON;
    };

    ISR isr1 {

	CATEGORY = 1;
	PRIORITY = 1;
    };

    ISR isr2 {

	CATEGORY = 2;
	PRIORITY = 1;
    };
};


