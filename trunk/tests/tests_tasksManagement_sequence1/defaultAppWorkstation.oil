OIL_VERSION = "2.5" : "tests_tasksManagement_sequence1" ;

IMPLEMENTATION trampoline {
    OS { 
        ENUM [EXTENDED] STATUS;
    } ;
    TASK {
        UINT32 STACKSIZE = 32768 ;
        UINT32 [1..10] PRIORITY = 1 ;
    } ;
    ISR {
        UINT32 STACKSIZE = 32768 ;
    } ;
};

 CPU test {

    OS config {
        STATUS = STANDARD;
	SHUTDOWNHOOK = TRUE;
    } ;

    APPMODE std {};

    TASK t1 {
        AUTOSTART =  TRUE { APPMODE = std ; } ;
        PRIORITY = 1;
        ACTIVATION = 1;
        SCHEDULE = NON;
    };

    TASK t2 {
        AUTOSTART =  FALSE;
        PRIORITY = 2;
        ACTIVATION = 1;
        SCHEDULE = NON;
    };

    ISR isr1 {

	CATEGORY = 1;
    };

    ISR isr2 {

	CATEGORY = 2;
    };
};


