    EVENT evt1 { MASK=AUTO; };
    
    RESOURCE r1 { RESOURCEPROPERTY = STANDARD; };
    RESOURCE r2 { RESOURCEPROPERTY = STANDARD; };
};

CPU test {

    TASK t2 {
        PRIORITY = 3;
        AUTOSTART = FALSE;
        ACTIVATION = 1;
        SCHEDULE = FULL;
        STACKSIZE = 16000;
        RESOURCE  = r2;
        EVENT = evt1 ;
    };
} ;
