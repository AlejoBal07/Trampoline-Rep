OIL_VERSION = "2.5" : "test" ;

IMPLEMENTATION trampoline {
    TASK {
        UINT32 STACKSIZE = 32768 ;
        UINT32 PRIORITY = 1 ;
    } ;
    ISR {
        UINT32 STACKSIZE = 32768 ;
    } ;
};

CPU test {

    OS config {
        STATUS = EXTENDED;
        ERRORHOOK = FALSE;
        APP_SRC = "tpl_default_tasks_workstation.c";
        TRAMPOLINE_BASE_PATH = "..";
        DOW=TRUE;
        CFLAGS  = "-g";
        CFLAGS  = "-Wall -Wformat -pedantic -std=c99";
        CFLAGS  = "-Wmissing-field-initializers -I.";
        ASFLAGS = "";
        STARTUPHOOK = TRUE;
    } ;
    
    COUNTER SystemCounter {
        SOURCE = IRQ1;
    };
    
    TASK SendButtons {
        PRIORITY = 1;
        AUTOSTART = FALSE;
        ACTIVATION = 10;
        SCHEDULE = FULL;
    };
    
    ISR BPFaster {
        CATEGORY = 2 ;
		PRIORITY = 30;
		SOURCE = IRQ5;
		RESOURCE = ResourceVector;
    };
    
    ISR BPSlower {
        CATEGORY = 2 ;
		PRIORITY = 30;
		SOURCE = IRQ6;
		RESOURCE = ResourceVector;
    };
    
    ISR BPLeft {
        CATEGORY = 2 ;
		PRIORITY = 30;
		SOURCE = IRQ7;
		RESOURCE = ResourceVector;
    };
    
    ISR BPRight {
        CATEGORY = 2 ;
		PRIORITY = 30;
		SOURCE = IRQ8;
		RESOURCE = ResourceVector;
    };
    
    RESOURCE ResourceVector {
        RESOURCEPROPERTY = STANDARD;
    };

};
