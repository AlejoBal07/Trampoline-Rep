program goil_program "version 1.1" :
	import grammar goil_grammar in "goil_grammar.ggs" ;
	#--- max error and warning count
	error 100 ;
	warning 100 ;
	when . "oil" message "a '.oil' source file" ??@lstring inSourceFile {
		grammar goil_grammar in inSourceFile ;
	}
	when . "OIL" message "a '.OIL' source file" ??@lstring inSourceFile {
		grammar goil_grammar in inSourceFile ;
	}
end program ;
