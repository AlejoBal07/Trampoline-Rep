%
    .% !PROCESSKIND %_% !NAME %Code : { *(.% !PROCESSKIND %_% !NAME %Code) }
%
end foreach
%
    .rodata (CONST) : {
      *(.rdata)
      *(.rodata)
      *(.osApiConst)
    }
    
/* Sections for const of tasks and ISR */
%
for DATA_SIZE in "32BIT","16BIT","8BIT","BOOLEAN","UNSPECIFIED" do
  for SECTION_KIND in "_CONST_","_CALIB_","_CARTO_","_CONFIG_DATA_" do
    foreach PROCESSES do
%    .% !PROCESSKIND %_% !NAME %_SEC% !SECTION_KIND !DATA_SIZE % : { *(.% !PROCESSKIND %_% !NAME %_SEC% !SECTION_KIND !DATA_SIZE %) }
%
    end foreach
  end for
end for
%    
    .ctors : {}
    .dtors : {}
    extab : {}
    extabindex : {}
