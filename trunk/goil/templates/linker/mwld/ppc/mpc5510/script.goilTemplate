%      .% !PROCESSKIND %_% !NAME %_SEC_VAR% !SECTION_KIND !DATA_SIZE % : { *(.% !PROCESSKIND %_% !NAME %_SEC_VAR% !SECTION_KIND !DATA_SIZE %) }
%
    end for
  end for
%/* Uninitialized variables section of % !PROCESSKIND % % !NAME % */
%  for DATA_SIZE in "32BIT","16BIT","8BIT","BOOLEAN","UNSPECIFIED" do
    for SECTION_KIND in "_NOINIT_","_POWER_ON_INIT_","_FAST_","_" do
%      .% !PROCESSKIND %_% !NAME %_noInit_SEC_VAR% !SECTION_KIND !DATA_SIZE % : { *(.% !PROCESSKIND %_% !NAME %_noInit_SEC_VAR% !SECTION_KIND !DATA_SIZE %) }
%
    end for
  end for
%      __SEG_END_% !PROCESSKIND %_% !NAME %_VAR_RGN = ALIGN(16) - 1;
    }
%
