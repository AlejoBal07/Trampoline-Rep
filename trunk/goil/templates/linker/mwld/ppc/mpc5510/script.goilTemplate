foreach PROCESSES do
%/* Section of stack of % !PROCESSKIND % % !NAME %  */
    .% !PROCESSKIND %_% !NAME %_SEC_STACK ALIGN(16) : {
      __SEG_START_% !PROCESSKIND %_% !NAME %_STACK_RGN = .;
